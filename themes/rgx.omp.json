{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": " > ",
    "foreground": "#9d7ba8",
    "background": "transparent"
  },
  "console_title_template": "{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .UserName }} ",
          "foreground": "#1f0d24",
          "background": "#e30b5c",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ .Path }} ",
          "foreground": "#ffffff",
          "background": "#c21e56",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true
          },
          "template": " {{ .HEAD }} ",
          "foreground": "#ffffff",
          "background": "#8b2252",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " > ",
          "foreground": "#1f0d24",
          "background": "#9d7ba8",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3
}
